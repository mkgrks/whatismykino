/* variables */
widthPixels = 300px
paddingPixels = 5px
contentColor = #f8faff
colorLink = #034f84
colorBackground = tomato
/* rules */

body
	font-family: Verdana, Geneva, sans-serif !important;
	margin 0
	padding 0
	border 0
	font-size 100%
	font inherit
	vertical-align baseline
	background-color colorBackground

ul 
	display flex
	li 
		list-style none
		margin-right 5px

#wrapper {
	display grid
  grid-template-columns 1fr 10fr 10fr 1fr
  grid-template-rows 3fr 40fr 1fr
  grid-template-areas ". header header ." ". inner_wrapper inner_wrapper ." ". footer footer ."
}

#header {
	grid-area header
	justify-self center
}

#nav
	grid-area nav
	background-color contentColor
	display flex
	justify-content center

#inner_wrapper
	grid-area inner_wrapper
	background-color contentColor

#footer
	grid-area footer
	justify-self center

#section_wrapper
	width 70%
	margin 0 auto

.subtitle
	font-size 2em
	padding-bottom 1em

.msg
	padding-bottom 1em
	font-size 1em
	text-align justify
	line-height 2em

.section_footer{
	font-size 0.9em
	padding-top 1em
	display flex
 	justify-content space-between
}

.section
	padding-bottom 1em

.top, .clickable
	cursor pointer
	text-decoration: underline colorLink

.top::after {
	content: "\f102";
	font-family: FontAwesome;
	font-style: normal;
}

#options-container
	padding-top 1em

.react-datepicker-wrapper 
	input 
		padding 5px
		border-radius 4px
		border 1px solid #ccc

#options-container 
	.react-datepicker__input-container > input
		padding paddingPixels
		width widthPixels
	.select
		padding paddingPixels
		width widthPixels
	
  